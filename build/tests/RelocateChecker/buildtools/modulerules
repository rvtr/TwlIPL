#fob
%.fob: 
	$(MAKEFBD) $(FBDDIR)/$*.fbd $(FBDSIZE_$*) ;\
	$(MAKEFOB) -b begin_data_$* $(FBDDIR)/$*.fbd $(FBDDIR)/$@


